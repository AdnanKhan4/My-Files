@model CFA.Models.Student
@{

    List<SelectListItem> lstCountry = new List<SelectListItem>();
    lstCountry.Add(new SelectListItem { Text = "Pakistan" });
    lstCountry.Add(new SelectListItem { Text = "China" });
    lstCountry.Add(new SelectListItem { Text = "Afghanistan" });


    List<SelectListItem> lstPak = new List<SelectListItem>();
    lstPak.Add(new SelectListItem { Text = "Karachi" });
    lstPak.Add(new SelectListItem { Text = "Rawalpindi" });
    lstPak.Add(new SelectListItem { Text = "Islamabad" });

}

<h2>Create</h2>

@{ Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }); }

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(i => i.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => i.Name, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => i.Phone, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => i.Email, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => i.Password, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(i => i.Gender, "Male") Male
            @Html.RadioButtonFor(i => i.Gender, "Female") Female
            @Html.RadioButtonFor(i => i.Gender, "Female") Other

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Subjects, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBox("ch_html") HTML
            @Html.CheckBox("ch_android") Android
            @Html.CheckBox("ch_java") Java

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Country, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(i => i.Country, lstCountry, htmlAttributes: new { @class = "form-control", onchange = "changeCities(this)" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.City, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(i => i.City, lstPak, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(i => i.Address, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <img src="#" id="uploadPreview" style="width:100%" alt="Alternate Text" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Select Image", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            <input type="file" name="imgFile" value="" id="imgFile" class="form-control" onchange="PreviewImage();" />
        </div>
    </div>







    <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <input type="submit" name="name" value="Submit" class="form-control" />
        </div>
    </div>

</div>

@{ Html.EndForm();}

<script>
    function changeCities(cb) {
        var Country = cb.value;
        var city = document.getElementById("City");
        // alert(Country);

        switch (Country) {
            case "Pakistan":
                city.innerHTML = "<option>Karachi</option><option>Rawalpindi</option><option>Islamabad</option>";
                break;
            case "China":
                city.innerHTML = "<option>bejing</option><option>shanghai</option><option>Wohan</option>";
                break;
            case "Afghanistan":
                city.innerHTML = "<option>Qabul</option><option>Qandhar</option><option>Ghazni</option>";
                break;



        }


    }

    function PreviewImage() {
        var oFReader = new FileReader();
        oFReader.readAsDataURL(document.getElementById("imgFile").files[0]);

        oFReader.onload = function (oFREvent) {
            document.getElementById("uploadPreview").src = oFREvent.target.result;
        };
    };
</script>

